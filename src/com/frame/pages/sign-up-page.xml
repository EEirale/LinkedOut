<main layout="GridBag">
    <object class="label" id ="email" size="120x60">
        <constraints>
            <insets>10,0,10,0</insets>
            <gridx>0</gridx>
            <gridy>0</gridy>
        </constraints>
        <text><![CDATA[<html><h2>Username</h2></html>]]></text>
    </object>
    <object class="textField" id ="emailField" size="240x120">
        <constraints>
            <insets>20,0,20,0</insets>
            <gridx>1</gridx>
            <gridy>0</gridy>
        </constraints>
    </object>
    <object class="label" id ="passwordLabel" size="240x120">
        <constraints>
            <insets>10,0,10,0</insets>
            <gridx>0</gridx>
            <gridy>1</gridy>
        </constraints>
        <text><![CDATA[<html><h2>Password</h2></html>]]></text>
    </object>
